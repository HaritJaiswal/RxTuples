<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:enter_data1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="2vp"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="30vp"
        ohos:text_color="$color:crimson"
        ohos:text_size="20vp"
        ohos:text="$string:enter_data"/>

    <TextField
        ohos:id="$+id:entry_1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_padding="4vp"
        ohos:bottom_padding="4vp"
        ohos:hint_color="$color:white"
        ohos:text_color="$color:black"
        ohos:text_size="20vp"
        ohos:hint="$string:StringValue"
        ohos:background_element="$color:gray"
        ohos:layout_alignment="horizontal_center"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="2vp"
        ohos:bottom_margin="10vp"
        ohos:left_padding="8vp"/>

    <Text
        ohos:id="$+id:enter_data2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="2vp"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="30vp"
        ohos:text_color="$color:crimson"
        ohos:text_size="20vp"
        ohos:text="$string:enter_data"/>

    <TextField
        ohos:id="$+id:entry_2"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_padding="4vp"
        ohos:bottom_padding="4vp"
        ohos:hint_color="$color:white"
        ohos:text_color="$color:black"
        ohos:text_size="20vp"
        ohos:hint="$string:StringValue"
        ohos:background_element="$color:gray"
        ohos:layout_alignment="horizontal_center"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="2vp"
        ohos:bottom_margin="10vp"
        ohos:left_padding="8vp"/>

    <Text
        ohos:id="$+id:enter_data3"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="2vp"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="30vp"
        ohos:text_color="$color:crimson"
        ohos:text_size="20vp"
        ohos:visibility="hide"
        ohos:text="$string:enter_data"/>

    <TextField
        ohos:id="$+id:entry_3"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_padding="4vp"
        ohos:bottom_padding="4vp"
        ohos:hint_color="$color:white"
        ohos:text_color="$color:black"
        ohos:text_size="20vp"
        ohos:hint="$string:StringValue"
        ohos:background_element="$color:gray"
        ohos:layout_alignment="horizontal_center"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="2vp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="8vp"
        ohos:visibility="hide"/>

    <Button
        ohos:id="$+id:create_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:create"
        ohos:text_size="30vp"
        ohos:layout_alignment="center"
        ohos:left_padding="6vp"
        ohos:right_padding="6vp"
        ohos:top_padding="4vp"
        ohos:bottom_padding="4vp"
        ohos:start_margin="60vp"
        ohos:end_margin="60vp"
        ohos:top_margin="50vp"
        ohos:bottom_margin="30vp"
        ohos:text_color="$color:black"
        ohos:background_element="$color:blue"/>

    <Text
        ohos:id="$+id:function_display_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:top_margin="80vp"
        ohos:text_size="25vp"
        ohos:text_color="$color:black"

        ohos:layout_alignment="horizontal_center"/>


</DirectionalLayout>